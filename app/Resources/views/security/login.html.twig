{% extends 'backOfficeBase.html.twig' %}
{% block body %}
    <style>
        .back-off {
            display: none;
        }
    </style>

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <div class="row">
        <div class="col-xs-12">
            <form action="{{ path('login') }}" method="post">
                <h1>SE CONNECTER</h1>
                <div class="col-xs-4 col-xs-offset-4">
                    <label for="username" class="formlogtxt">Administrateur :</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }} " class="formlog" />
                </div>
                <div class="col-xs-4 col-xs-offset-4">
                    <label for="password" class="formlogtxt">Mot de Passe :</label>
                    <input type="password" id="password" name="_password" class="formlog" />
                </div>
                <input type="hidden" name="_target_path" value="/admin" />
                <div class="col-xs-4 col-xs-offset-4">
                    <button type="submit" class="btn btn-submitlog">CONNEXION</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}