{% extends 'neoxiBase.html.twig' %}
{% block body %}
<div class="container-fluid esp globalContainer">
    <div class="row">
        <div class="col-sm-12">
            <h1 id="bloctxt">NOUS CONTACTER</h1>
        </div>
    </div>
</div>

<div class="container-fluid globalContainer form">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-md-4 ">
            <h2 id="fctxt">FORMULAIRE DE CONTACT</h2>
            <form class="space20" method="POST" action="{{ path ('neoxis_swiftmailer') }}">
                <div>NOM:
                    <input type="text" placeholder="NOM" class="form-control" id="lname" name="name" required/>
                </div>
                <br>
                <div>PRÉNOM:
                    <input type="text" placeholder="PRÉNOM" class="form-control" id="fname" name="surname" required/>
                </div>
                <br>
                <div>E-MAIL:
                    <input type="email" placeholder="E-MAIL" class="form-control" id="mail" name="email" required/>
                </div>
                <br>
                <div>TÉLÉPHONE:
                    <input placeholder="TÉLÉPHONE" class="form-control" id="tel" name="phone" pattern="^((\+\d{1,3}(-| )?\(?\d\)?(-| )?\d{1,5})|(\(?\d{2,6}\)?))(-| )?(\d{3,4})(-| )?(\d{4})(( x| ext)\d{1,5}){0,1}$"/>
                </div>
                <br>
                <div>VOTRE MESSAGE:
                    <textarea class="form-control" placeholder="VOTRE MESSAGE" id="com" name="message" required></textarea>
                    </br>
                    <div class="g-recaptcha" data-sitekey="6LdkigoUAAAAAMKcVAglm3Ve403815BaTAyzgN85" data-callback="enableBtn"></div>
                    <button type="submit" class="btn btn-submit" id="rebtn">ENVOYER</button>
                </div>
                <div>{{ app.request.get('sended') }}</div>
            </form>
        </div>

        <div class="col-xs-10 col-xs-offset-1 col-md-6">
            <h2 id="fctxt" class="col-xs-11 col-md-7 col-md-offset-1">NOS COORDONÉES</h2>
            <div class="container-fluid gmap">
                <div class="row">
                    <div class="col-xs-12 col-md-9 col-md-offset-1 responsive-map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2782.68298448552!2d4.795324015567963!3d45.77754317910582!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47f4eb65a952861b%3A0x27dce54920c75580!2s31+Rue+Saint-Simon%2C+69009+Lyon!5e0!3m2!1sfr!2sfr!4v1476193805898"
                                width="987px" height="632px" frameborder="0" style="" allowfullscreen></iframe>
                    </div>
                </div>
                <div class="row space20">
                    <img class="imgBureau hideOnMd col-xs-3 col-xs-offset-1" src="{{ asset ('images/bureaux_neoxi.JPG')}}">
                    <div class="col-xs-12 col-md-7">
                        <p id="infocoor">GREENOPOLIS <br/> 31, RUE SAINT-SIMON <br/> 69009 LYON </br>
                           Tél: 04.27.11.86.00</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script src='https://www.google.com/recaptcha/api.js?hl=fr'></script>
    <script type="text/javascript" src="{{ asset ('js/contact.js')}}"></script>
    <script type="text/javascript" src="{{ asset ('js/sticky.js')}}"></script>
{% endblock %}
