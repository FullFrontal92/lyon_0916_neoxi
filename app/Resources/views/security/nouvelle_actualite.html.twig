{% extends 'backOfficeBase.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row break">
            <h1 class="col-xs-10 col-xs-offset-1 titleBack">Nouvelle actualité</h1>
        </div>
        <div class="col-xs-10 col-xs-offset-1">
            <div class="row">
                <div class="col-xs-6">
                    {{ form_start(form, {'attr': {novalidate: 'novalidate'}}) }}
                    <div class="form-group">
                        {{ form_row(form.picture, {label:'image :', 'attr':{'class' : 'form-control'}, id : 'srcImage'}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.title, {label:'titre :', 'attr':{'class' : 'form-control WYZ'}}) }}
                    </div>
                    <div class="form-group hidden">{% set date = now %}
                        {{ form_row(form.date, {label:'date :', 'attr':{'class' : 'form-control'}, value : date, type: 'hidden'}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.text, {label:'texte :', 'attr':{'class' : 'form-control WYZ'}}) }}
                    </div>
                    <div class="form-group">
                        <input class="AjoutActu" type="submit" value="Ajouter" />
                    </div>
                    {{ form_end(form) }}
                </div>
                <div class="col-xs-6 space20">
                    {% set id = 1 %}
                    {% for imgNumber in 1..12%}
                        <div class="col-xs-4 ">
                            <img class="col-xs-11 imgBack pointer" src="{{ asset ('images/banque/image_actu' ~ id ~ '.jpg') }}" onclick="buttonInsertSrc({{ id - 1 }})">
                        </div>
                        {% set id = id + 1 %}
                    {% endfor %}
                </div>
            </div>
            <div class="col-xs-12">
                <a href="{{ path('admin') }}"><input class="btn retour" type="submit" value="<- Retour à l'accueil"></a>
            </div>
        </div>
        <div class="container marginContainer"></div>
    </div>
{% endblock %}