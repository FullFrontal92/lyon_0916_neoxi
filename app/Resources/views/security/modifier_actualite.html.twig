{% extends 'neoxiBase.html.twig' %}

{% block body %}
    <div class="container-fluid globalContainer">
        <div class="row">
            <h1 class="col-xs-10 col-xs-offset-1">Editer l'actualité</h1>
        </div>
        <div class="row">
            <div class="col-xs-6">
                {{ form_start(edit_form) }}
                <div class="form-group">
                    {{ form_row(edit_form.picture, {label:'image :', 'attr':{'class' : 'form-control'}, id : 'srcImage'}) }}
                </div>
                <div class="form-group">
                    {{ form_row(edit_form.title, {label:'titre :', 'attr':{'class' : 'form-control'}}) }}
                </div>
                <div class="form-group hidden">{% set date = now %}
                    {{ form_row(edit_form.date, {label:'date :', 'attr':{'class' : 'form-control'}, value : date, type: 'hidden'}) }}
                </div>
                <div class="form-group">
                    {{ form_row(edit_form.text, {label:'texte :', 'attr':{'class' : 'form-control'}}) }}
                </div>
                <div class="form-group break">
                    <div class="col-xs-12">
                        <input class="btn create" type="submit" value="Editer" />
                    </div>

                </div>
                {{ form_end(edit_form) }}
                <div class="col-xs-12 form-group space20">
                    {{ form_start(delete_form) }}
                    <input class="btn delete" type="submit" value="Supprimer">
                    {{ form_end(delete_form) }}
                </div>
                <div class="form-group">
                    <a href="{{ path('admin') }}"><input class="btn retour" type="submit" value="<- Retour à l'accueil"></a>
                </div>
            </div>
            <div class="col-xs-6">
                {% set id = 1 %}
                {% for imgNumber in 1..12%}
                    <div class="col-xs-4">
                        <img class="col-xs-11 imgBack pointer" src="{{ asset ('images/banque/image_actu' ~ id ~ '.jpg') }}" onclick="buttonInsertSrc({{ id - 1 }})">
                    </div>
                    {% set id = id + 1 %}
                {% endfor %}
            </div>
        </div>
        <div class="container marginContainer"></div>
    </div>

{% endblock %}