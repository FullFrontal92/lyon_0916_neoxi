{% extends 'neoxiBase.html.twig' %}

{% block body %}
    <div class="container-fluid globalContainer">
    <div class="row">
        <h1 class="col-xs-10 col-xs-offset-1">Nouvelle actualité</h1>
    </div>
        <div class="row">
            <div class="col-xs-6">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.picture, {label:'image :', 'attr':{'class' : 'form-control srcImage'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.title, {label:'titre :', 'attr':{'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.date, {label:'date :', 'attr':{'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.text, {label:'texte :', 'attr':{'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <input class="btn create" type="submit" value="Create" />
                </div>
                {{ form_end(form) }}
                <div class="form-group">
                    <a class="btn create" href="{{ path('admin') }}">Retour à l'accueil</a>
                </div>
            </div>


            <div class="col-xs-6">
                {% set id = 1 %}
                {% for imgNumber in 1..12%}
                    <img class="col-xs-4 imgBack pointer" src="{{ asset ('images/banque/image_actu' ~ id ~ '.jpg') }}" onclick="buttonInsertSrc({{ id - 1 }})">
                    {% set id = id + 1 %}
                {% endfor %}
            </div>
        </div>


        <div class="container marginContainer"></div>
    </div>
{% endblock %}